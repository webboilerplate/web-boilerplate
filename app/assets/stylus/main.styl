html
body
.page
.container

  width 100%
  height 100%
  margin 0
  padding 0


body
  position relative

  min-height 100%
  min-width 320px

  font-family 'Open Sans', sans-serif
  font-weight 400
  color #fff

  background #31343c

  perspective 1200px

  &.open
      overflow hidden

  &.no-touch
    -webkit-touch-callout none
    -webkit-text-size-adjust none
    -webkit-user-select none



.content
  margin: 0 auto;
  padding 0 1rem
  max-width: 940px;


.page
  @media all and (min-width:568px)
    z-index: -1
    top 0
    right 0
    left 0
    bottom 0
    position absolute

    overflow-y scroll
    -webkit-overflow-scrolling touch



header[role="banner"]

  position relative
  color #31343c
  background #fff

  text-align center

  padding 2% 0

  h1
    margin 0
    padding 0

    font-size 3rem


  .claim

    margin 0;
    padding 1em;

    font-size 1.2rem
    color alpha(#31343c, 0.5)


  .menu
    display none



nav[role="navigation"]


  font-weight 200
  color #fff

  background #53b2e5

  ul
    @extend .content
    padding 0
    list-style none
    li
      display inline-block
      a
        display block
        padding: 17px 20px


main
    padding: 400px 1rem 1rem;





