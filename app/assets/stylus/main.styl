@import "vendor/h5bp/main.styl"
@import "vendor/necolas/normalize.styl"
// @import "vendor/meyerweb/reset.styl"

@import "components"

html
body
.page
.container
    /* Positioning */
    /* Box-model */
    width 100%
    height 100%
    margin 0
    padding 0
    /* Typography */
    /* Visual */
    /* Misc */


body
    /* Positioning */
    position relative

    /* Box-model */
    min-height 100%
    min-width 320px
    overflow-y scroll
    -webkit-overflow-scrolling touch

    /* Typography */
    font-family 'Open Sans', sans-serif
    font-weight 400
    color #fff
    // color #31343c

    /* Visual */
    background #31343c
    // background #f0f2f5

    /* Misc */

    //if in webview and needs to feel more native:
    // -webkit-touch-callout none
    // -webkit-text-size-adjust none
    // -webkit-user-select none

    &.open
        overflow hidden

.content
    /* Box-model */
    margin: 0 auto;
    padding 0 1rem
    max-width: 940px;


header[role="banner"]
    position relative
    height 30%
    min-height 140px
    /* Typography */
    color #31343c
    /* Visual */
    background #31343c
    background #fff

    // layer()
    // position fixed

    .logo
        align()

    h1
        margin 0
        padding 0

        font-size 3rem

    .claim
        display block

        font-size 1.2rem
        color #767d90
        text-align center


    .menu
        display none



nav[role="navigation"]

    display block

    font-weight 200
    color white

    background #53b2e5

    ul
        @extend .content
        padding 0
        list-style none
        li
            display inline-block
            a
                display block
                padding: 17px 20px

main
    padding: 60px 16px 16px 16px;
