@import "vendor/h5bp/main.styl"
@import "vendor/necolas/normalize.styl"
// @import "vendor/meyerweb/reset.styl"

@import "components"

html
body
.page
.container
    width 100%
    height 100%
    margin 0
    padding 0


body
    position relative
    font-family: 'Open Sans', sans-serif;
    font-weight 400
    background-color #FFFFFF
    min-height 100%
    min-width 320px

    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;

    background #31343c
    color #fff
    background #f0f2f5
    color #31343c

    //if in webview and needs to feel more native:
    // -webkit-touch-callout none
    // -webkit-text-size-adjust none
    // -webkit-user-select none

    &.open
        overflow hidden

.content
    margin: 0 auto;
    padding 0 1rem
    max-width: 940px;

header[role="banner"]
    // layer()
    // position fixed
    color white

    background #31343c
    h1
        font-size 4rem
        margin 0
        padding 2rem 0

        .claim
            position relative
            font-size 2rem
            color #767d90
            transform: translateX(-50%)

    .menu
        display none



nav[role="navigation"]
    display block
    font-weight 200
    background #53b2e5

    ul
        @extend .content
        padding 0
        list-style none
        li
            display inline-block
            a
                display block
                padding: 17px 20px

main
    padding: 60px 16px 16px 16px;
    //min-height: 100%;




