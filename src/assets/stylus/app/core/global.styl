*, *::before, *::after
  box-sizing: border-box
html,
body,
button
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

  .android,
  .android &
    text-rendering: auto


.container
  margin: 0 auto
  padding: 0 2%
  max-width: 1280px
  +bp(568px)
    padding: 0 4%


html
body
.wrap
  width: 100%
  height: 100%
  margin: 0
  padding: 0

body
  position: relative

  min-height :100%
  min-width: 320px

  font-family: 'Open Sans', sans-serif
  font-weight: 400
  color: #fff

  &.no-touch
    -webkit-touch-callout: none
    -webkit-text-size-adjust: none
    -webkit-user-select: none

  &.no-scroll
    overflow: hidden

  +when(565px)
    word-wrap: break-word


//reset
h1,h2,h3,h4,h5,b,strong
    margin: 0
    font-weight: 300
    letter-spacing: 1px
    line-height: 1.5;


.page
  cf()
  width: 100%
  padding 2rem 0
  background: #31343c


header[role="banner"]
  width: 100%

  padding: 4rem 0 0

  color: #fff
  text-align: center

  background: #53b2e5

  h1
    margin: 0
    padding: 0
    font-family 'lane_-_narrowregular'

    font-size :4rem
    line-height: 1
    letter-spacing 0px

    margin-bottom: 1rem

    .small {
      text-transform: lowercase
    }
    .bold {
      font-weight 400
      font-size: 6rem
    }


  .claim
    font-family 'lane_-_narrowregular'
    margin: 0
    padding-top: 0.5rem
    padding-bottom: 3rem

    font-size: 1.2rem
    color: alpha(#31343c, 0.5)

  .menu
    display: none


  +when(1024px, true)
    h1
      font-size :5rem
      .bold {
        font-size :8rem
      }

  +when(567px)

    min-height 100%

    h1
      letter-spacing -1px;
      font-size :2rem
      .bold {
        font-size :3.5rem
      }
    .claim
      font-size: 1.1rem


nav[role="navigation"]

  position: -webkit-sticky
  position: -moz-sticky
  position: -ms-sticky
  position: -o-sticky
  position: sticky

  top: 0

  font-weight: 200
  color: #fff

  background: #53b2e5

  ul
    @extend .container;
    padding: 0
    list-style: none
    font-size: 0
    li
      display: inline-block
      border-top-left-radius:4px;
      border-top-right-radius:4px;
      font-size: 1rem
      &.active, &:hover
        background #E26A6A
      a
        display: block
        padding: 17px 20px

      +bp(567px)
        border-bottom-left-radius:4px;
        border-bottom-right-radius:4px;
        &.active, &:hover
          background #E26A6A

.page
  border-top 2px solid #E26A6A

main
  float: left
  width: 60%

  +bp(1023px)
    float none
    width: 100%

  +bp(568px)
    padding-top: 30px


.sidebar
  float right
  width 40%

  +bp(1023px)
    float none
    width: 100%





footer[role="contentinfo"]
  line-height: 20
  background: #E26A6A
  +bp(568px)
    min-height 100%
    padding-top: 15.5rem
    padding-bottom: 4rem
    line-height: 1.412
    .ios &
      min-height 120%



