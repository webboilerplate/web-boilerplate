html
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  box-sizing: border-box
  &.android
    text-rendering: auto
*
  &,
  &::before,
  &::after
    box-sizing: inherit
html,
body,
button
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  text-rendering: optimizeLegibility
html,
body
  height: 100%
  margin: 0
  padding: 0
  width: 100%
