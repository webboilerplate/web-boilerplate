*, *::before, *::after
    box-sizing: border-box


html, body, button
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale;
    font-smoothing: antialiased
    text-rendering: optimizeLegibility;


//picture reset
picture
    margin  0
    padding  0
    border  0
    outline  0
    display  block

//button reset
button
    background none
    border none
    margin 0
    padding 0
    width auto
    overflow visible
    font inherit
    outline none
    -webkit-appearance none


//font reset

h1,h2,h3,h4,h5,b,strong
    margin 0
    font-weight: 300
    letter-spacing: 1px
    line-height: 1.5;


//a reset
a
    color inherit
    text-decoration none
    p &
        border-bottom 1px solid #767d90
        padding 0 3px 1px

        &:hover
            border-bottom 1px solid white


address
    display inline
    font-style normal


//outlining the nav with invisible headlines
nav
    h1,h2,h3,h4
        font-size 0
        visibility hidden

