//picture reset
picture
  border: 0
  display: block
  margin: 0
  padding: 0
  &:focus
    outline: 0
//button reset
button
  -moz-appearance: none
  -webkit-appearance: none
  background: none
  border: 0
  cursor: pointer
  font: inherit
  line-height: auto
  margin: 0
  overflow: visible
  padding: 0
  width: auto
  &:focus
    outline: 0
  @media print
    display: none
//a reset
a
  color: inherit
  text-decoration: none
  p &
    border-bottom: 1px solid #767d90
    padding: 0 3px 1px
    &:hover
      border-bottom: 1px solid
address
  display: inline
  font-style: normal
