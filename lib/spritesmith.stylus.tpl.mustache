{
	'functions': true
}

{{#items}}
  ${{name}}-x : {{px.x}};
  ${{name}}-y : {{px.y}};
  ${{name}}-offset-x : {{px.offset_x}};
  ${{name}}-offset-y : {{px.offset_y}};
  ${{name}}-width : {{px.width}};
  ${{name}}-height : {{px.height}};
  ${{name}}-total-width : {{px.total_width}};
  ${{name}}-total-height : {{px.total_height}};
  ${{name}}-image: '{{{escaped_image}}}';
  ${{name}} : {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} {{px.total_width}} {{px.total_height}} '{{{escaped_image}}}';

{{/items}}


{{#options.functions}}


/*
The provided mixins are intended to be used with the array-like variables
.icon-home {
  @include sprite-width($icon-home);
}
.icon-email {
  @include sprite($icon-email);
}
*/
sprite-size($sprite)
  $sprite-total-width = nth($sprite, 7)
  $sprite-total-height = nth($sprite, 8)
  background-size: $sprite-total-width $sprite-total-height

sprite-width($sprite)
  width: nth($sprite, 5)

sprite-height($sprite)
  height: nth($sprite, 6)

sprite-position($sprite)
  $sprite-offset-x = nth($sprite, 3)
  $sprite-offset-y = nth($sprite, 4)
  background-position: $sprite-offset-x $sprite-offset-y

sprite-image($sprite)
  $sprite-image = nth($sprite, 9) + ".png"
  background-image: url({$sprite-image})

sprite-image-retina($sprite)
  $sprite-image = nth($sprite, 9) + "@2x.png"
  background-image: url({$sprite-image})

sprite($sprite, $size = true)
  sprite-image($sprite)
  sprite-position($sprite)
  background-repeat: no-repeat
  if $size
    sprite-width($sprite)
    sprite-height($sprite)
  @media (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: (:div 3 2)), (min-device-pixel-ratio: 1.5), (min-resolution: 144dpi)
    sprite-size($sprite)
    sprite-image-retina($sprite)

//needs the parent to be relative or absolute
center-sprite($sprite)
  sprite($sprite)
  position: absolute
  top: 50%
  left: 50%
  margin-left: -1*(:div nth($sprite, 5) 2)
  margin-top: -1*(:div nth($sprite, 6) 2)
  // margin-left: -1*(nth($sprite, 5)/2);
  // margin-top: -1*(nth($sprite, 6)/2);

{{/options.functions}}
